<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vw="clr-namespace:Minesweeper.ViewModels"
             xmlns:c="clr-namespace:Minesweeper.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Minesweeper.Views.GameView"
             x:DataType="vw:GameViewModel">

    <UserControl.Resources>
        <c:BoardDimensionConverter x:Key="BoardDimensionConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="*,9*">
        <Grid Grid.Row="0"
              Margin="0 10 0 0"
              ColumnDefinitions="*,*,*">
            <TextBlock Grid.Column="0"
                       Text="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            <Button Grid.Column="1"
                    Content="Reset"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            <TextBlock Grid.Column="2"
                       Text="Timer"
                       HorizontalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1"
              Margin="10 20 10 10">
            <ItemsControl Items="{Binding Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding RowCount}"
                                     Columns="{Binding ColumnCount}"
                                     Height="{Binding RowCount, Converter={StaticResource BoardDimensionConverter}}"
                                     Width="{Binding ColumnCount, Converter={StaticResource BoardDimensionConverter}}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Height="26"
                                Width="26"
                                CornerRadius="0"
                                BorderBrush="Black"
                                BorderThickness="1" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>

</UserControl>